<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.reminiscence"
		name="Flashback (REminiscence)"
		version="0.3.6.7"
		provider-name="Gregory Montoir, Stuart Carnie">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>map</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Flashback (REminiscence) 0.3.6</summary>
		<description lang="en_GB">REminiscence is a rewrite of the engine used in the game Flashback from Delphine Software.

The game data files (DOS, PC-CD, Amiga, Macintosh) are required.

Supported files: .map</description>
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.reminiscence</source>
	</extension>
</addon>
